import os
import os.path

PKGDATADIR = "@PKGDATADIR@"

try:
    GLADEDIR = os.environ["GLADEDIR"]
except:
    if os.path.exists ("./sabayon.glade"):
        GLADEDIR ="./"
    elif os.path.exists ("admin-tool/sabayon.glade"):
        GLADEDIR = "admin-tool/"
    elif os.path.exists (PKGDATADIR + "/glade/sabayon.glade"):
        GLADEDIR = PKGDATADIR + "/glade/"
    else:
        GLADEDIR = "./"

try:
    MODULEPATH = os.environ["MODULEPATH"]
except:
    if os.path.exists ("./storage-modules"):
        MODULEPATH = "./storage-modules"
    elif os.path.exists ("lib/storage-modules"):
        MODULEPATH = "./lib/storage-modules/"
    elif os.path.exists ("../lib/storage-modules"):
        MODULEPATH = "../lib/storage-modules/"
    elif os.path.exists (PKGDATADIR + "/storage-modules"):
        MODULEPATH = PKGDATADIR + "/storage-modules/"
    else:
        MODULEPATH = "./storage-modules"
