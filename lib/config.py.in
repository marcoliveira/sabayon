import os
import os.path

PKGDATADIR  = "@PKGDATADIR@"
PROFILESDIR = "@SYSCONFDIR@/desktop-profiles"
USERSHELL   = "/bin/bash"
USERMOD     = "/usr/sbin/usermod"

DEFAULT_PATH = "/usr/local/bin:/usr/bin:/bin:/usr/X11R6/bin"

SESSION_TOOL_PATH = "@LIBEXECDIR@/sabayon-session"
MONITOR_TOOL_ARGV = [ "@LIBEXECDIR@/sabayon-monitor" ]
XNEST_ARGV        = [ "/usr/X11R6/bin/Xnest", "-terminate", "-audit", "0", "-name", "Xnest", "-nolisten", "tcp" ]
SESSION_ARGV      = [ "/etc/X11/xdm/Xsession", "gnome" ]

PANEL_KEY_BASE = "/apps/panel"
# PANEL_KEY_BASE = "/apps/panel/profiles/default"

try:
    GLADEDIR = os.environ["GLADEDIR"]
except:
    if os.path.exists ("./sabayon.glade"):
        GLADEDIR ="./"
    elif os.path.exists ("admin-tool/sabayon.glade"):
        GLADEDIR = "admin-tool/"
    elif os.path.exists (PKGDATADIR + "/glade/sabayon.glade"):
        GLADEDIR = PKGDATADIR + "/glade/"
    else:
        GLADEDIR = "./"

try:
    MODULEPATH = os.environ["MODULEPATH"]
except:
    if os.path.exists ("./sources"):
        MODULEPATH = "./sources"
    elif os.path.exists ("lib/sources"):
        MODULEPATH = "./lib/sources/"
    elif os.path.exists ("../lib/sources"):
        MODULEPATH = "../lib/sources/"
    elif os.path.exists (PKGDATADIR + "/sources"):
        MODULEPATH = PKGDATADIR + "/sources/"
    else:
        MODULEPATH = "./sources"
