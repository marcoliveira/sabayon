#!/bin/sh

if test -f @PKGDATADIR@/sabayon-apply.py ; then
    export PYTHONPATH=@PKGDATADIR@
    exec python @PKGDATADIR@/sabayon-apply.py $@
fi
if test -f ./sabayon-apply.py ; then
    dir=`pwd`
    dir=`dirname $dir`
    export GLADEDIR=./
    export PYTHONPATH=$dir/lib
    exec python ./sabayon-apply.py $@
fi
if test -f admin-tool/sabayon-apply.py ; then
    dir=`pwd`
    export GLADEDIR=admin-tool/
    export PYTHONPATH=$dir/lib
    exec python admin-tool/sabayon-apply.py $@
fi
