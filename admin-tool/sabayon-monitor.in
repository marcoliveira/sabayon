#!/bin/sh

if test -f @PKGDATADIR@/sabayon-monitor.py ; then
    export PYTHONPATH=@PKGDATADIR@
    exec python @PKGDATADIR@/sabayon-monitor.py $@
fi
if test -f ./sabayon-monitor.py ; then
    dir=`pwd`
    dir=`dirname $dir`
    export GLADEDIR=./
    export PYTHONPATH=$dir/lib
    exec python ./sabayon-monitor.py $@
fi
if test -f admin-tool/sabayon-monitor.py ; then
    dir=`pwd`
    export GLADEDIR=admin-tool/
    export PYTHONPATH=$dir/lib
    exec python admin-tool/sabayon-monitor.py $@
fi
