#!/bin/sh

if test -f @PKGDATADIR@/sabayon.py ; then
    export PYTHONPATH=@PKGDATADIR@
    exec python @PKGDATADIR@/sabayon.py $@
fi
if test -f ./sabayon.py ; then
    dir=`pwd`
    dir=`dirname $dir`
    export GLADEDIR=./
    export PYTHONPATH=$dir/lib
    exec python ./sabayon.py $@
fi
if test -f admin-tool/sabayon.py ; then
    dir=`pwd`
    export GLADEDIR=admin-tool/
    export PYTHONPATH=$dir/lib
    exec python admin-tool/sabayon.py $@
fi
